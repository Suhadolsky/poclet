---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../components/FormattedDate.astro';
import { Image } from 'astro:assets';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const featuredPost = posts[0];
const remainingPosts = posts.slice(1);
const sidebarPosts = posts.slice(1, 6);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			.layout-container {
				display: grid;
				grid-template-columns: 280px 1fr;
				gap: 2.5rem;
				max-width: 1300px;
				margin: 2rem auto;
				padding: 0 1.5rem;
			}

			/* Sidebar Styling */
			.sidebar {
				display: flex;
				flex-direction: column;
				gap: 2.5rem;
			}

			.sidebar-widget {
				background: #1a1d23;
				border: 1px solid #2d323d;
				border-radius: 12px;
				padding: 1.5rem;
			}

			.sidebar-widget h3 {
				font-size: 1.1rem;
				margin-bottom: 1.2rem;
				color: var(--accent);
				text-transform: uppercase;
				letter-spacing: 1px;
				border-bottom: 1px solid #2d323d;
				padding-bottom: 0.5rem;
			}

			.sidebar-list {
				display: flex;
				flex-direction: column;
				gap: 1rem;
			}

			.sidebar-item {
				display: flex;
				gap: 0.8rem;
				text-decoration: none;
				align-items: flex-start;
			}

			.sidebar-item img {
				width: 60px;
				height: 60px;
				border-radius: 6px;
				object-fit: cover;
			}

			.sidebar-item h4 {
				font-size: 0.85rem;
				margin: 0;
				color: #fff;
				line-height: 1.3;
			}

			.ad-box {
				background: #13151a;
				border: 1px dashed #444;
				color: #666;
				display: flex;
				align-items: center;
				justify-content: center;
				text-align: center;
				font-size: 0.75rem;
				border-radius: 8px;
			}

			/* Main Feed Styling */
			.main-content {
				display: flex;
				flex-direction: column;
				gap: 2rem;
			}

			.article-card {
				display: grid;
				grid-template-columns: 350px 1fr;
				background: #1a1d23;
				border: 1px solid #2d323d;
				border-radius: 16px;
				overflow: hidden;
				transition: all 0.3s ease;
			}

			.article-card:hover {
				border-color: var(--accent);
				box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
				transform: translateY(-2px);
			}

			.card-image-link {
				display: block;
				height: 100%;
			}

			.article-card img {
				width: 100%;
				height: 100%;
				object-fit: cover;
			}

			.card-content {
				padding: 1.5rem 2rem;
				display: flex;
				flex-direction: column;
			}

			.card-category {
				color: var(--accent);
				font-size: 0.75rem;
				font-weight: 700;
				text-transform: uppercase;
				margin-bottom: 0.5rem;
			}

			.article-card h2 {
				font-size: 1.7rem;
				margin: 0 0 1rem 0;
				line-height: 1.2;
			}

			.article-card h2 a {
				color: #fff;
				text-decoration: none;
			}

			.card-meta {
				font-size: 0.85rem;
				color: #888;
				margin-bottom: 1rem;
			}

			.card-excerpt {
				color: #ccc;
				font-size: 1rem;
				line-height: 1.6;
				margin-bottom: 1.5rem;
				display: -webkit-box;
				-webkit-line-clamp: 3;
				-webkit-box-orient: vertical;
				overflow: hidden;
			}

			.btn-read {
				align-self: flex-start;
				background: var(--accent);
				color: #000 !important;
				padding: 0.7rem 1.8rem;
				border-radius: 6px;
				font-weight: 700;
				font-size: 0.9rem;
				text-transform: uppercase;
				transition: 0.2s;
			}

			.btn-read:hover {
				background: #fff;
				box-shadow: 0 0 15px var(--accent);
			}

			/* Hero Post (First Item) */
			.hero-post {
				grid-template-columns: 1fr;
				margin-bottom: 1rem;
			}

			.hero-post .card-image-link {
				height: 400px;
			}

			.hero-post h2 {
				font-size: 2.5rem;
			}

			@media (max-width: 1000px) {
				.layout-container {
					grid-template-columns: 1fr;
				}
				.sidebar {
					display: none; /* Hide sidebar on small tablets for cleaner list */
				}
				.article-card {
					grid-template-columns: 1fr;
				}
				.article-card img {
					height: 250px;
				}
			}

			.site-header-hero {
				text-align: center;
				padding: 3rem 0;
				background: linear-gradient(180deg, #13151a 0%, #1a1d23 100%);
				border-bottom: 1px solid #2d323d;
			}

			.site-header-hero h1 {
				font-size: 3.5rem;
				color: #fff;
				margin-bottom: 0.5rem;
				text-shadow: 0 0 20px rgba(0, 255, 157, 0.3);
			}
		</style>
	</head>
	<body>
		<Header />
		
		<div class="site-header-hero">
			<h1>POCKET CORE</h1>
			<p>{SITE_DESCRIPTION}</p>
		</div>

		<main class="layout-container">
			<!-- LEFT SIDEBAR -->
			<aside class="sidebar">
				<div class="sidebar-widget">
					<div class="ad-box" style="height: 250px;">
						[ SPONSORED AD ]<br/>300 x 250
					</div>
				</div>

				<div class="sidebar-widget">
					<h3>Latest Reviews</h3>
					<div class="sidebar-list">
						{sidebarPosts.map((post) => (
							<a href={`/blog/${post.slug}/`} class="sidebar-item">
								{post.data.heroImage && (
									<Image width={120} height={120} src={post.data.heroImage} alt="" />
								)}
								<div>
									<h4>{post.data.title}</h4>
									<span style="font-size: 0.7rem; color: #666;">
										<FormattedDate date={post.data.pubDate} />
									</span>
								</div>
							</a>
						))}
					</div>
				</div>

				<div class="sidebar-widget">
					<div class="ad-box" style="height: 600px;">
						[ VERTICAL AD ]<br/>300 x 600
					</div>
				</div>
			</aside>

			<!-- MAIN CONTENT -->
			<section class="main-content">
				<!-- Featured Post -->
				<article class="article-card hero-post">
					<a href={`/blog/${featuredPost.slug}/`} class="card-image-link">
						{featuredPost.data.heroImage && (
							<Image width={1200} height={600} src={featuredPost.data.heroImage} alt={featuredPost.data.title} />
						)}
					</a>
					<div class="card-content">
						<span class="card-category">Featured Review</span>
						<h2><a href={`/blog/${featuredPost.slug}/`}>{featuredPost.data.title}</a></h2>
						<div class="card-meta">
							<FormattedDate date={featuredPost.data.pubDate} /> â€¢ By John
						</div>
						<p class="card-excerpt">{featuredPost.data.description}</p>
						<a href={`/blog/${featuredPost.slug}/`} class="btn-read">Read Full Review</a>
					</div>
				</article>

				<!-- List of Posts -->
				{remainingPosts.map((post) => (
					<article class="article-card">
						<a href={`/blog/${post.slug}/`} class="card-image-link">
							{post.data.heroImage && (
								<Image width={700} height={400} src={post.data.heroImage} alt={post.data.title} />
							)}
						</a>
						<div class="card-content">
							<span class="card-category">Review</span>
							<h2><a href={`/blog/${post.slug}/`}>{post.data.title}</a></h2>
							<div class="card-meta">
								<FormattedDate date={post.data.pubDate} />
							</div>
							<p class="card-excerpt">{post.data.description}</p>
							<a href={`/blog/${post.slug}/`} class="btn-read">Read Review</a>
						</div>
					</article>
				))}
			</section>
		</main>

		<Footer />
	</body>
</html>
